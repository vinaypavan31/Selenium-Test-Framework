<?xml version="1.0" encoding="UTF-8"?>

<suite name="OrangeHRMSuite" parallel="tests" thread-count="8">
	<listeners>
		<listener class-name="com.orangehrm.listeners.TestListener"></listener>
	</listeners>
	<test name="OrangeHRMTest_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.orangehrm.tests.ApiTest" />
		</classes>
	</test>
	<test name="OrangeHRMTest_edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.orangehrm.tests.DummyClass" />
			<class name="com.orangehrm.tests.DummyClass2" />
		</classes>
	</test>
	<test name="OrangeHRMTest_firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.orangehrm.tests.DBVerificationTest" />
			<class name="com.orangehrm.tests.LoginPageTest" />
			<class name="com.orangehrm.tests.HomePageTest" />
		</classes>
	</test>
</suite>



